---
import { format } from "../lib/utils";

interface Props {
    post: any;
}

const { post } = Astro.props;
---

<div class="flex items-baseline">
    <p
        class="mr-2 min-w-24 text-base text-slate-700 dark:text-slate-300 font-mono"
    >
        <time datetime={post.data.publishDate.toISOString()}>
            {format(post.data.publishDate, "yyyy/MM/dd")}
        </time>
    </p>
    <a class="hover:text-rainbow" href={`/blog/${post.slug}`}>
        <span class="text-lg font-semibold">{post.data.title}</span>
    </a>
</div>
